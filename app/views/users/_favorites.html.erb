<% if fav_microposts.any? %>
    <ul class="list-unstyled">
        <% fav_microposts.each do |micropost| %>
            <li class="media">
                <img class="mr-2 rounded" src="<%= gravatar_url(@user, {size: 50}) %>" alt="">
                <div class="media-body">
                    <div>
                        <%= micropost.content %>
                    </div>
                    <div>
                        <p><%= link_to "View profile", user_path(micropost.user) %></p>
                    </div>
                </div>
            </li>
        <% end %>
    </ul>
    <%= paginate fav_microposts %>
<% end %>